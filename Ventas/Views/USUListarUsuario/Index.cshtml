                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 pt-1">
                            <div class="input-group text-right">
                                <span class="col-form-label">DIRECCIÓN:</span>
                                <input type="text" class="form-control" id="txtEditarDireccion" required>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 pt-1">
                            <div class="input-group text-right">
                                <span class="col-form-label">EMAIL:</span>
                                <input type="text" class="form-control" id="txtEditarEmail">
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 pt-1">
                            <div class="input-group text-right">
                                <span class="col-form-label">TIPO EMPLEADO:</span>
                                <select class="form-control select2bs4" id="selEditarTipoEmpleado" required>
                                </select>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 pt-1">
                            <div class="input-group">
                                <span class="col-form-label">ROL:</span>
                                <select class="form-control select2bs4" id="selEditarRol" required>
                                </select>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-4 col-lg-6 col-xl-6 pt-1">
                            <div class="custom-file" id="customFile">
                                <input type="file" class="custom-file-input" id="idFotografiaEditar" aria-describedby="fileHelp">
                                <label class="custom-file-label" for="idFotografiaEditar">
                                    Seleccionar fotografía
                                </label>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 justify-content-center text-center pt-3">
                            <button class="btn btn-success" type="submit"><i class="fad fa-save text-white me-1"></i> ACTUALIZAR</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>