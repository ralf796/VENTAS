@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script src="~/Scripts/Usuarios/USUListarUsuario.js"></script>
}

<div class="card">
    <span class="badge badge-pill badge-secondary">LISTADO DE USUARIOS</span>
    <div class="card-body">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 text-right">
                <button type="button" class="btn btn-primary" data-toggle="modal" id="btnAbrirModalCrear" data-target="#modalDatos">
                    <i class="far fa-plus-circle"></i> NUEVO
                </button>
            </div>
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="demo-container">
                    <div id="exportButton"></div>
                    <div id="gridContainer"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalCrearUsuario">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">CREAR USUARIO</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span style="color:red" aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formGuardarEmpleadoUsuario">
                    <div class="row">
                        <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 pt-1">
                            <div class="input-group text-right">
                                <span class="col-form-label">PRIMER NOMBRE:</span>
                                <input type="text" class="form-control" id="txtGuardarPrimerNombre" name="txtGuardarPrimerNombre" required>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 pt-1">
                            <div class="input-group text-right">
                                <span class="col-form-label">SEGUNDO NOMBRE:</span>
                                <input type="text" class="form-control" id="txtGuardarSegundoNombre" name="txtGuardarPrimerNombre">
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 pt-1">
                            <div class="input-group text-right">
                                <span class="col-form-label">PRIMER APELLIDO:</span>
                                <input type="text" class="form-control" id="txtGuardarPrimerApellido" required>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 pt-1">
                            <div class="input-group text-right">
                                <span class="col-form-label">SEGUNDO APELLIDO:</span>
                                <input type="text" class="form-control" id="txtGuardarSegundoApellido">
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 pt-1">
                            <div class="input-group text-right">
                                <span class="col-form-label">CELULAR:</span>
                                <input type="text" class="form-control" id="txtGuardarCelular" required>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 pt-1">
                            <div class="input-group text-right">
                                <span class="col-form-label">TEL. CASA:</span>
                                <input type="text" class="form-control" id="txtGuardarTelCasa">
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 pt-1">
                            <div class="input-group text-right">
                                <span class="col-form-label">DIRECCIÓN:</span>
                                <input type="text" class="form-control" id="txtGuardarDireccion" required>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 pt-1">
                            <div class="input-group text-right">
                                <span class="col-form-label">EMAIL:</span>
                                <input type="text" class="form-control" id="txtGuardarEmail">
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 pt-1">
                            <div class="input-group text-right">
                                <span class="col-form-label">TIPO EMPLEADO:</span>
                                <select class="form-control select2bs4" id="selGuardarTipoEmpleado" required>
                                </select>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 pt-1">
                            <div class="input-group">
                                <span class="col-form-label">ROL:</span>
                                <select class="form-control select2bs4" id="selGuardarRol" required>
                                </select>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 pt-1">
                            <div class="input-group text-right">
                                <span class="col-form-label">USUARIO:</span>
                                <input type="text" class="form-control" id="txtGuardarUsuario" required>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-4 col-lg-6 col-xl-6 pt-1">
                            <div class="input-group text-right">
                                <span class="col-form-label">CONTRASEÑA:</span>
                                <input type="text" class="form-control" id="txtGuardarPassword" required>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-4 col-lg-6 col-xl-6 pt-1">
                            <div class="custom-file" id="customFile">
                                <input type="file" class="custom-file-input" id="idFotografia" aria-describedby="fileHelp">
                                <label class="custom-file-label" for="idFotografia">
                                    Seleccionar fotografía
                                </label>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 justify-content-center text-center pt-3">
                            <button class="btn btn-success" type="submit"><i class="fad fa-save text-white me-1"></i> GUARDAR</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

