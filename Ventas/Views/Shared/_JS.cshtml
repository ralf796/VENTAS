<script>
    function CallLoadingFire(text) {
        $('#divLoading').show();
        if (typeof text === 'undefined') {
            $('.fire-text').html('Cargando...');
        }
        else {
            $('.fire-text').html(text);
        }

        $(document).ajaxStop(function () {
            $('#divLoading').hide();
        });
    }
</script>