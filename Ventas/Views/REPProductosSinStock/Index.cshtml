
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script src="~/Scripts/Reportes/REPProductosSinStock.js"></script>
}

<div class="card">
    <span class="badge badge-pill badge-secondary">REPORTE PRODUCTOS SIN STOCK</span>
    <div class="card-body">
        <form id="formVentas">
            <div class="row justify-content-center">
                <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-3 pt-1 d-none">
                    <div class="input-group text-center">
                        <span class="col-form-label">FECHA:</span>
                        <input type="text" class="form-control" id="txtFecha" name="txtFecha" required readonly>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-3 pt-1 text-center">
                    <button class="btn btn-secondary" id="botonInforme"><i class="far fa-filter"></i> GENERAR REPORTE</button>
                </div>
            </div>
        </form>
    </div>
</div>

@*-------------------------------CARD QUE MUESTRA LAS VENTAS-----------------------------*@
<div class="card">
    <span class="badge badge-pill badge-secondary"></span>
    <div class="card-body">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="demo-container">
                    <div id="exportButton"></div>
                    <div id="gridContainer"></div>
                </div>
                <div class="col-md-12">
                    <div id="chart"></div>
                </div>
            </div>
        </div>
    </div>
</div>