
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script src="~/Scripts/Compras/COMListarCompras.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-polyfill/7.4.0/polyfill.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/exceljs/4.1.1/exceljs.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/2.0.2/FileSaver.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.0.0/jspdf.umd.min.js"></script>
}

<div class="card">
    <span class="badge badge-pill badge-secondary">LISTADO DE COMPRAS</span>
    <div class="card-body">
        <form id="formVentas">
            <div class="row justify-content-center">
                <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-3 pt-1">
                    <div class="input-group text-center">
                        <span class="col-form-label">FECHA INICIAL:</span>
                        <input type="text" class="form-control" id="txtFechaI" name="txtFechaI" required readonly>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-3 pt-1">
                    <div class="input-group text-center">
                        <span class="col-form-label">FECHA FINAL:</span>
                        <input type="text" class="form-control" id="txtFechaF" name="txtFechaF" required readonly>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-3 pt-1 text-center">
                    <button class="btn btn-secondary" id="btnGenerar"><i class="far fa-filter"></i> GENERAR</button>
                </div>
            </div>
        </form>
    </div>
</div>
@*-------------------------------CARD QUE MUESTRA LAS VENTAS-----------------------------*@
<div class="card">    
    <div class="card-body">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="dx-datagrid-container  col-md-12">
                    <div id="gridContainer"></div>
                </div>
                <div class="col-md-12">
                    <div id="chart"></div>
                </div>
            </div>

        </div>

    </div>
</div>


<div class="modal fade" id="modalDocumentos">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">DOCUMENTOS ADJUNTOS</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span style="color:red" aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12 col-md-12 col-xl-12">
                        <table class="table" id="tblbodyDocumentos">
                            <thead>
                                <tr>
                                    <th scope="col" class="text-center">#</th>
                                    <th scope="col" class="text-center">Link</th>
                                </tr>
                            </thead>
                            <tbody id="tbodyDocumentos">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-danger" data-dismiss="modal">CERRAR</button>
            </div>
        </div>
    </div>
</div>

