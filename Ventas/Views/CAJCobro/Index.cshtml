@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <script src="~/Scripts/Caja/CAJCobro.js"></script>
}

<div class="card">
    <span class="badge badge-pill badge-secondary">COBROS AUTO REPUESTOS EL EDEN</span>
    <div class="card-body">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="demo-container">
                    <div id="exportButton"></div>
                    <div id="gridContainer"></div>
                </div>
                <table class="d-none table-striped display nowrap scroll" style="width:100%" id="tblDatos">
                    <thead class="headColor">
                        <tr>
                            <th class="border text-center">ORDEN DE COMPRA</th>
                            <th class="border text-center">CLIENTE</th>
                            <th class="border text-center">VENDEDOR</th>
                            <th class="border text-center">TOTAL VENTA</th>
                            <th class="border text-center" style="width:130px">ACCIONES</th>
                        </tr>
                    </thead>
                    <tbody id="tbodyDatos">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@*---------------------------------------------MODAL DETALLE VENTA------------------------------------------------*@
<div class="modal" id="modalDetalle" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">DETALLE DE VENTA</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <div class="demo-container">
                            <div id="exportButton"></div>
                            <div id="gridContainer2"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
@*----------------------------------------------------MODAL COBRO-------------------------------------------------*@
<div class="modal" id="modalCobro" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">COBRO DISTRIBUIDORA EL EDEN</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <input id="hfID" type="hidden" />
                    <input id="hfOpcion" type="hidden" />
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <label>Total a Cobrar</label>
                    </div>
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <label id="totalCobro"></label>
                    </div>
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <input type="text" name="nombre" class="form-control" value="" id="txtCobro" />
                    </div>
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <select class="custom-select mt-2" id="selTipoPago">
                            <option selected disabled>SELECCIONE</option>
                            <option value="1">EFECTIVO</option>
                            <option value="2">TARJETA</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="btnCobrar" data-dismiss="modal">COBRAR</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">CANCELAR</button>
            </div>
        </div>
    </div>
</div>