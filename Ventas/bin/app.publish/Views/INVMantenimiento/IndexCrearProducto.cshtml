
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <style>
        .col-form-label {
            padding-top: 10px;
            padding-right: 1px;
            text-align: right;
            font-size: 10.6px;
            color: gray;
            font-weight: bold;
            width: 115px;
            /*border: 1px solid;
            background-color: darkseagreen;*/
        }
    </style>
}

@section scripts{
    <script src="~/Scripts/Inventario/CrearProducto.js"></script>
}


<div class="card">
    <span class="badge badge-pill badge-secondary">DATOS CREACIÓN PRODUCTO</span>
    <div class="card-body">
        <form id="formGuardarProducto">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 pt-1">
                    <div class="input-group text-right">
                        <span class="col-form-label">NOMBRE:</span>
                        <input type="text" class="form-control" id="txtNombre" name="txtNombre" required>
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 pt-1">
                    <div class="input-group text-right">
                        <span class="col-form-label">DESCRIPCIÓN:</span>
                        <input type="text" class="form-control" id="txtDescripcion" name="txtDescripcion">
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-4 pt-1">
                    <div class="input-group text-right">
                        <span class="col-form-label">PRECIO COSTO:</span>
                        <input type="number" class="form-control text-right" id="txtPrecioCosto" name="txtPrecioCosto" required>
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-4 pt-1">
                    <div class="input-group text-right">
                        <span class="col-form-label">PRECIO VENTA:</span>
                        <input type="number" class="form-control text-right" id="txtPrecioVenta" name="txtPrecioVenta">
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-4 pt-1">
                    <div class="input-group text-right">
                        <span class="col-form-label">STOCK:</span>
                        <input type="number" class="form-control text-center" id="txtStock" name="txtStock" required>
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-4 pt-1">
                    <div class="input-group text-right">
                        <span class="col-form-label">CÓDIGO:</span>
                        <input type="text" class="form-control text-center" id="txtCodigo" name="txtCodigo" required>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 pt-1">
                    <div class="input-group">
                        <span class="col-form-label">BODEGA:</span>
                        <select class="form-control" id="selBodega" name="selBodega" required>
                        </select>
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 pt-1">
                    <div class="input-group">
                        <span class="col-form-label">MODELO:</span>
                        <select class="form-control" id="selModelo" name="selModelo" required>
                        </select>
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 pt-1">
                    <div class="input-group">
                        <span class="col-form-label">PROVEEDOR:</span>
                        <select class="form-control" id="selProveedor" name="selProveedor" required>
                        </select>
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 pt-1">
                    <div class="input-group text-right">
                        <span class="col-form-label">MARCA REPUESTO:</span>
                        <select class="form-control" id="selMarcaRepuesto" name="selMarcaRepuesto" required>
                        </select>
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 pt-1">
                    <div class="input-group text-right">
                        <span class="col-form-label">CATEGORÍA:</span>
                        <select class="form-control" id="selCategoria" name="selCategoria" required>
                        </select>
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 pt-1">
                    <div class="input-group text-right">
                        <span class="col-form-label">SUBCATEGORÍA:</span>
                        <select class="form-control" id="selSubcategoria" name="selSubcategoria" required>
                        </select>
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 pt-1">
                    <div class="input-group text-right">
                        <span class="col-form-label">MARCA VEHICULO:</span>
                        <select class="form-control" id="selMarcaVehiculo" name="selMarcaVehiculo" required>
                        </select>
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 pt-1">
                    <div class="input-group text-right">
                        <span class="col-form-label">SERIE VEHICULO:</span>
                        <select class="form-control" id="selSerieVehiculo" name="selSerieVehiculo" required>
                        </select>
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 justify-content-center text-center pt-3">
                    <button class="btn btn-success" type="submit"><i class="fad fa-save text-white me-1"></i> GUARDAR</button>
                </div>
            </div>
        </form>
    </div>
</div>





